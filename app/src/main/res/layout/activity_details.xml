<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsACtivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageView
            android:id="@+id/posterflash"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/flashposter" />
        <TextView
            android:id="@+id/title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#70000000"
            android:maxLines="2"
            android:padding="10dp"
            android:layout_marginLeft="150dp"
            android:text="THE FLASH"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/flashpic"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@mipmap/flashpic"
            android:layout_marginTop="160dp"
            />

        <TextView
            android:id="@+id/rating1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="290dp"
            android:paddingRight="90dp"
            android:text="9 ★★★★☆ "
            android:textColor="#FF0000"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp">

        <TextView
            android:id="@+id/overview"
            android:textColor="@color/black"
            android:textSize="20dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="325dp"
            android:text="After being struck by lighting ,Barry Allen wakes up from his coma to discover he's been given the power of super speed,becoming the Flash,fighting crime in Cental City. " />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginTop="660dp"
            android:paddingRight="5dp"
            android:text="    Dermott Down"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/namesecond"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginTop="660dp"
            android:paddingRight="5dp"
            android:text="   Grant Gustin"
            android:textColor="#000000"
            android:textSize="20dp" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        >
        <ImageView
            android:id="@+id/actorpic"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@mipmap/actordermott"
            android:layout_marginTop="480dp"
            android:padding="10dp"
            />
        <ImageView
            android:id="@+id/actorpicsecond"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@mipmap/actorgrantgustin"
            android:layout_marginTop="480dp"
            android:padding="10dp"
            />


    </LinearLayout>

</androidx.cardview.widget.CardView>